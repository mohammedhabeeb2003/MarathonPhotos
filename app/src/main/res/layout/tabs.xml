<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/tabLayout"
    android:background="#000000ff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/wallpaper_icon"
            android:id="@+id/btn_setAs"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="SetAs"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn_setAs"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <Button
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_btn_Download"
                android:background="@drawable/download_icon"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Download"
                android:textColor="#ffffff"
                android:layout_below="@+id/btn_btn_Download"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>